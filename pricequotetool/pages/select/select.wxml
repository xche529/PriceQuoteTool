<view>
  <view class="emptyLine"></view>
  <checkbox>使用容量搜索</checkbox>
  <view class="emptyLine"></view>
  <picker range="{{capacityArray}}" value="{{selectedCapacityIndex}}" bindchange= "onSelectCapacity" data-index="{{i}}">选择容量: {{selectedCapacityValue}}kVA</picker>
  <view class="emptyLine"></view>
  <checkbox>使用电压搜索</checkbox>
  <view class="emptyLine"></view>

  <picker range="{{capacityArray}}" value="{{selectedCapacityIndex}}" bindchange= "onSelectCapacity" data-index="{{i}}">选择电压: {{selectedCapacityValue}}kVA</picker>

  <view class="emptyLine"></view>
  <button type="primary" bind:tap="onSearch">搜索结果</button>
</view>

<view wx:for="{{tempList}}" wx:for-index="i" wx:for-item="transformer" class="transformer">
  <view class="indexNumber">{{1 + i}}</view>

  <view>
    <view>型号： {{transformer.name}} {{transformer.material}}</view>
    <view>电压： {{transformer.voltage}}kV</view>
    <vied>容量： {{transformer.capacity}}kVA</vied>
    <view>价格： {{transformer.price}}元</view>
  </view>
  <view class="picker">
  </view>
</view>